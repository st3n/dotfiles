"set statusline+=\ \ %3.9(%l/%L%) " line / total lines
"set statusline+=\ \ %{FileSize()}

function! FileSize()
   let bytes = getfsize(expand("%:p"))
   if bytes <= 0
      return ""
   endif
   if bytes < 1024
      return bytes . "B"
   else
      return (bytes / 1024) . "K"
   endif
endfunction

